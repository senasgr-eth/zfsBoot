{
  "dashboard": {
    "title": "NSBoot System Overview",
    "tags": ["nsboot", "diskless", "boot"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "System Resources",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Active Clients",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "nsboot_active_clients",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 3,
        "title": "Total Images",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "nsboot_total_images",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "ZFS Pool Usage",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "zfs_pool_used_bytes{pool=\"nsboot0\"} / zfs_pool_size_bytes{pool=\"nsboot0\"} * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m])",
            "legendFormat": "RX {{device}}",
            "refId": "A"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m])",
            "legendFormat": "TX {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "ZFS I/O Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "irate(zfs_pool_read_ops_total{pool=\"nsboot0\"}[5m])",
            "legendFormat": "Read IOPS",
            "refId": "A"
          },
          {
            "expr": "irate(zfs_pool_write_ops_total{pool=\"nsboot0\"}[5m])",
            "legendFormat": "Write IOPS",
            "refId": "B"
          }
        ]
      },
      {
        "id": 7,
        "title": "Client Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "nsboot_clients_online",
            "legendFormat": "Online",
            "refId": "A"
          },
          {
            "expr": "nsboot_clients_offline",
            "legendFormat": "Offline",
            "refId": "B"
          },
          {
            "expr": "nsboot_clients_booting",
            "legendFormat": "Booting",
            "refId": "C"
          }
        ]
      },
      {
        "id": 8,
        "title": "iSCSI Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "nsboot_iscsi_active_targets",
            "legendFormat": "Active Targets",
            "refId": "A"
          },
          {
            "expr": "nsboot_iscsi_active_connections",
            "legendFormat": "Active Connections",
            "refId": "B"
          }
        ]
      },
      {
        "id": 9,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "targets": [
          {
            "expr": "time() - node_boot_time_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 10,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "irate(node_disk_read_bytes_total[5m])",
            "legendFormat": "Read {{device}}",
            "refId": "A"
          },
          {
            "expr": "irate(node_disk_written_bytes_total[5m])",
            "legendFormat": "Write {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "ZFS ARC Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "zfs_arc_hits / (zfs_arc_hits + zfs_arc_misses) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      }
    ]
  }
}
